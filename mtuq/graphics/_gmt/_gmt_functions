#!/bin/bash


function gmt_settings_ver4 {
    gmtdefaults -D > .gmtdefaults4
    gmt gmtset BASEMAP_TYPE plain
    gmt gmtset CHAR_ENCODING Standard+
    gmt gmtset COLOR_FOREGROUND 75/75/75 # for polarity cpt
    gmt gmtset MEASURE_UNIT inch # cm / inch
    gmt gmtset PAPER_MEDIA letter
    gmt gmtset PAGE_ORIENTATION portrait
    gmt gmtset PLOT_DEGREE_FORMAT ddd.x
    gmt gmtset LABEL_FONT_SIZE 12
    gmt gmtset ANOT_FONT_SIZE 12
}


function gmt_settings {
    gmt gmtset COLOR_FOREGROUND 75/75/75 # for polarity cpt
    gmt gmtset FONT_ANNOT 12p
    gmt gmtset FONT_LABEL 12p
    gmt gmtset FORMAT_GEO_MAP ddd.x
    gmt gmtset MAP_FRAME_TYPE plain
    gmt gmtset PROJ_LENGTH_UNIT i # inch
    gmt gmtset PS_CHAR_ENCODING Standard+
    gmt gmtset PS_MEDIA letter
    gmt gmtset PS_PAGE_ORIENTATION portrait
}


function add_reference_arcs {
    proj_arg=$1
    area_arg=$2
    out=$3

    (echo -30 35.2644 ; echo 30 54.7356)  |\
     gmt psxy -N -W2p,0/0/0/35 $proj_arg $area_arg -O -K $shiftd >> $out

    (echo -30 -54.7356; echo 30 -35.2644) |\
     gmt psxy -N -W2p,0/0/0/35 $proj_arg $area_arg -O -K $shiftd >> $out

    (echo -30 35.2644 ; echo 30 -35.2644) |\
    gmt psxy -N -W2p,0/0/0/35 $proj_arg $area_arg -O -K $shiftd >> $out

}


function add_reference_points {
    proj_arg=$1
    area_arg=$2
    out=$3

    echo   0.0000 -90.0000 |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo -30.0000 -54.7356 |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo -30.0000 0.0000   |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo -30.0000 35.2644  |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo   0.0000 90.0000  |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo 30.0000 54.7356   |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo 30.0000 0.0000    |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

    echo 30.0000 -35.2644  |\
    gmt psxy -N -Sp8p -W1p,0 $proj_arg $area_arg -O -K $shiftd >> $out

}


function add_reference_labels {
    proj_arg=$1
    area_arg=$2
    out=$3

    echo "  0.0000 -90.0000 (-1,-1,-1)" |\
    gmt pstext -F+f8p+jCT -N $proj_arg $area_arg -O -K $shiftd -D0p/-10p >> $out

    echo "-30.0000   0.0000 (2,-1,-1)" |\
    gmt pstext -F+f8p+jRM -N $proj_arg $area_arg -O -K $shiftd -D-10p/0p >> $out

    echo "-30.0000  35.2644 (1,0,0)" |\
    gmt pstext -F+f8p+jRM -N $proj_arg $area_arg -O -K $shiftd -D-10p/0p >> $out

    echo "  0.0000  90.0000 (1,1,1)" |\
    gmt pstext -F+f8p+jCB -N $proj_arg $area_arg -O -K $shiftd -D0p/10p  >> $out

    echo " 30.0000  54.7356 (1,1,0)" |\
    gmt pstext -F+f8p+jLM -N $proj_arg $area_arg -O -K $shiftd -D10p/0p  >> $out

    echo " 30.0000   0.0000 (1,1,-2)" |\
    gmt pstext -F+f8p+jLM -N $proj_arg $area_arg -O -K $shiftd -D10p/0p  >> $out

    echo " 30.0000 -35.2644 (0,0,-1)" |\
    gmt pstext -F+f8p+jLM -N $proj_arg $area_arg -O -K $shiftd -D10p/0p  >> $out

    echo "-30.0000 -54.7356 (0,-1,-1)" |\
    gmt pstext -F+f8p+jRM -N $proj_arg $area_arg -O -K $shiftd -D-10p/0p >> $out

    echo   0.0 -90.0 ISO   |\
    gmt pstext -F+f10p+jCB -N $proj_arg $area_arg -O -K $shiftd -D0p/-25p   >> $out

    echo   0.0  90.0 ISO   |\
    gmt pstext -F+f10p+jCB -N $proj_arg $area_arg -O -K $shiftd -D0p/20p    >> $out

    echo -30.0   0.0 CLVD  |\
    gmt pstext -F+f10p+jRM -N $proj_arg $area_arg -O -K $shiftd -D-10p/-10p >> $out

    echo  30.0   0.0 CLVD  |\
    gmt pstext -F+f10p+jLM -N $proj_arg $area_arg -O -K $shiftd -D10p/-10p  >> $out

}


function add_title {
    if [ ! -z "$2" ]; then
        :
    elif [ ! -z "$1" ]; then
        :
    fi

    
    #echo   0.0  90.0 10p 0 CB $title   |\
    #gmt pstext -N $proj_arg $area_arg -O -K $shiftd -D0p/20p    >> $out
}




function psclose {
cat << EOF >> $1
%%PageTrailer
U
showpage

%%Trailer

end
%%EOF
EOF
}
